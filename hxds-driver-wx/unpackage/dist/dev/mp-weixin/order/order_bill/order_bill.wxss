page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
  padding-bottom: 100rpx;
}
.setion-title {
  background-color: #eef0f6;
  padding: 25rpx 30rpx;
  display: flex;
}
.setion-title image {
  width: 32rpx;
  height: auto;
  margin-top: 9rpx;
  margin-right: 12rpx;
}
.setion-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #555;
}
.section-content {
  padding: 20rpx 20rpx;
}
.section-content .item {
  display: flex;
  justify-content: space-between;
  border-bottom: solid 1rpx #e0e0e0;
  padding: 25rpx 20rpx 25rpx 20rpx;
}
.section-content .item:last-child {
  border-bottom: none;
}
.section-content .item .left {
  border-left: solid 7rpx #38b3d4;
  padding-left: 20rpx;
}
.section-content .item .left .item-title {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 15rpx;
}
.section-content .item .left .item-desc {
  display: block;
  font-size: 26rpx;
  color: #b0b0b0;
}
.section-content .item .right {
  color: #555;
  font-size: 28rpx;
}
.section-content .content-container {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 20rpx;
}
.section-content .content-container .content {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 30rpx;
}
.section-content .content-container .content:last-child {
  margin-bottom: 0;
}
.section-content .content-container .content text {
  color: #555;
  font-weight: bold;
  margin-right: 3rpx;
}
.section-content .content-container .content .red {
  color: #ff3b3b;
}
.section-content .content-container .big {
  font-size: 32rpx;
}
.section-content .content-container .img {
  width: 150rpx;
  height: auto;
}
.contact-container {
  background-color: #eef0f6;
  padding: 45rpx 50rpx 45rpx 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}
.contact-container .contact {
  margin-bottom: 20rpx;
}
.btn {
  background-color: #2074fd;
  color: #fff;
  width: 87%;
  margin-top: 30rpx;
}
.btn::after {
  border: none;
}
.btn:active {
  background-color: #0259e9;
}

